{
  "private": true,
  "engines": {
    "node": "^12.0.0",
    "npm": ">=6.9.0"
  },
  "scripts": {
    "test": "jest --runInBand",
    "build": "webpack --config webpack.config.$NODE_ENV.js",
    "lint": "tslint -c tslint.yaml --project tsconfig.json",
    "start": "nodemon --watch src --ext ts --ignore *.test.ts --exec \"npm run build && node dist/index\""
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "src/.*\\.test\\.ts$",
    "testEnvironment": "node"
  },
  "dependencies": {
    "@hapi/joi": "~16.1.7",
    "body-parser": "~1.19.0",
    "cors": "~2.8.5",
    "express": "~4.17.1",
    "http-status-codes": "~1.4.0",
    "source-map-support": "~0.5.12"
  },
  "devDependencies": {
    "@babel/core": "~7.4.4",
    "@babel/plugin-proposal-class-properties": "~7.5.5",
    "@babel/preset-typescript": "~7.3.3",
    "@types/body-parser": "~1.17.0",
    "@types/cors": "~2.8.6",
    "@types/express": "~4.16.1",
    "@types/hapi__joi": "~16.0.3",
    "@types/jest": "~24.0.15",
    "@types/node": "~12.0.12",
    "babel-loader": "~8.0.6",
    "clean-webpack-plugin": "~2.0.2",
    "jest": "~24.8.0",
    "nodemon": "~1.19.1",
    "prettier": "~1.17.1",
    "terser-webpack-plugin": "~1.2.4",
    "ts-jest": "~24.0.2",
    "tslint": "~5.16.0",
    "tslint-config-prettier": "~1.18.0",
    "tslint-plugin-prettier": "~2.0.1",
    "typescript": "~3.6.3",
    "webpack": "~4.31.0",
    "webpack-cli": "~3.3.2",
    "webpack-merge": "~4.2.1",
    "webpack-node-externals": "~1.7.2",
    "fork-ts-checker-webpack-plugin": "~3.1.0"
  },
  "name": "@c0mrade/node-typescript-boilerplate",
  "version": "1.0.0",
  "description": "Node typescript boilerplate",
  "repository": "https://github.com/kovalc0mrade/node-typescript-boilerplate"
}
